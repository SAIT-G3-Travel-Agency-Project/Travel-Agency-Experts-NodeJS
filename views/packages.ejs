<html lang="en">
<%- include('partials/head.ejs') %>
<body class="<% if(locals.login){ if(role == 'admin'){ %>logged-in<% } } %>">
    <%- include('partials/admin_bar.ejs') %>
	<%- include('partials/header.ejs') %>
	<section class="contact">
        <h1 class="page-heading">
         Contact <b class="wt-t">T</b><b class="wt-r">r</b><b class="wt-a">a</b><b class="wt-v">v</b><b class="wt-e">e</b><b class="wt-l">l</b> Experts</h1> 
<form name="guests">
    <table cellpadding="0" cellspacing="0" border="0" layout="fixed">
    	<tr>
	 <select id="destination" name="destination">
   		 <option value="bali">Bali</option>
 		 <option value="california">California</option>
  		 <option value="fiji">Fiji</option>
   		 <option value="Dubai">Dubai</option>
 	 </select>
	</tr>
        <tr>
            <td>Adults</td>
            <td><input type="button" name="minus" value="-" onclick="guests.adults.value = parseInt(guests.adults.value) - 1"></td>
            <td style="width: 10px;">
                <input type="text" name="adults" id="adults" value="2" colspan="1">
            </td>
            <td><input type="button" name="plus" value="+" onclick="guests.adults.value = parseInt(guests.adults.value) + 1"></td>
        </tr>
        <tr>
            <td>Children</td>
            <td><input type="button" name="minus" value="-" onclick="guests.children.value = parseInt(guests.children.value) - 1"></td>
            <td style="width: 10px;">
                <input type="text" name="children" id="children" value="0" width="30px">
            </td>
            <td><input type="button" name="plus" value="+" onclick="guests.children.value = parseInt(guests.children.value) + 1"></td>
        </tr>
        <tr><td></td><td colspan="3"><input type="button" name="book" onclick="guests.submit" value="Book Now"</td></tr>
