<!DOCTYPE html>
<html lang="en">
<head>
<%- include('../partials/head.ejs') %>
</head>
<style type="text/css">
body { padding: 0; }
</style>
<body id="backend" class="logged-in">
    <%- include('../partials/admin_bar.ejs') %>
	<%- include('../partials/backend-header.ejs') %>
    <section class="backend-content">
        <div class="dashboard-heading">
            <h1><i class="fa fa-house-user" aria-hidden="true"></i> Agents</h1>
        </div>

        <div class="backend-heading-section">
            <h2> Agencies</h2>
            <span class="heading-description">Create, edit and delete your agencies.</span>
            <a class="create-an-article" href="/dashboard/agents/new">Create a new agency</a>
        </div>

        <div class="customize">    
            <% agency.forEach(agent => { %>
                <div class="column-4">
                        <div class="image-container">
                            <img height="150" width="100" src="<%= agent.coverImagePath %>">
                        </div>
                        <div class="description">
                            <span class="heading"><%= agent.title %></span>
                            <span class="created-on">Created on: <%= agent.createdAt.toLocaleDateString() %> </span>
                        </div>
                        <a class="edit-post" href="/dashboard/agents/edit/<%= agent.id %>">
                                <i class="fa fa-edit"></i> Edit
                        </a>
                        <form style="width: 50%; float:left;" class="delete-post" method="POST" action="/destinations/<%= agent.id %>?_method=DELETE">
                            <button type="submit">
                                    <i class="fa fa-remove"></i> Delete                        
                            </button>
                        </form>
                        <a target="_blank" class="read-more" href="/agents/<%= agent.slug %>">Open in new tab</a>            
                </div>
            <% }) %>
        </div>          
    
        
    </section>

    

	<!-- START FOOTER -->
	<footer>
		<span><b>&copy; 2021 Paradise Travel Agency</b></span>
	</footer>
	<!-- END FOOTER -->    
</body>
</html>